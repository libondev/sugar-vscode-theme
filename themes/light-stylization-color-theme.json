{
  "name": "Sugar Light Stylization",
  "$schema": "vscode://schemas/color-theme",
  "include": "./light-color-theme.json",
  "semanticHighlighting": true,
  "tokenColors": [
    {
      "scope": [
        "meta.brace",
        "keyword.operator",
        "meta.attribute.directive", // @click(.)stop
        "storage.type.function.arrow",
        "punctuation.other",
        "punctuation.section", // ( )
        "punctuation.separator",  // ,
        "punctuation.terminator", // ;
        "punctuation.definition", // {}
        "punctuation.destructuring",
        "punctuation.separator.key-value",
        "meta.property-list.media-query.scss",
        "invalid.illegal.character-not-allowed-here.html",
        "punctuation.definition.group.begin.less",
        "punctuation.definition.group.end.less",
				"punctuation.definition.attribute-selector.begin.bracket.square.scss",
				"punctuation.definition.attribute-selector.end.bracket.square.scss",
      ],
      "settings": {
        "foreground": "#6664"
      }
    },

    {
      // ?: ?=
      "scope": "punctuation.definition.group",
      "settings": {
        "foreground": "#C4704F",
      }
    },

    {
      "scope": [
        "punctuation.accessor", // xxx(.)xxx
        "keyword.operator.logical",
        "keyword.operator.bitwise",
        "keyword.operator.increment",
        "keyword.operator.decrement",
        "keyword.operator.relational",
        "keyword.operator.comparison",
        "keyword.operator.arithmetic",
        "keyword.operator.assignment",
      ],
      "settings": {
        "foreground": "#999"
      }
    },

    {
      // language keywords
      "scope": [
        "storage.type",
        "keyword.control",
        "storage.modifier",
        "keyword.operator.new",
        "keyword.operator.expression",
        "support.type.object.module.js",
      ],
      "settings": {
        "fontStyle": "italic"
      }
    },

    {
      "scope": [
        "storage.type.function.arrow",
        "keyword.control.anchor.regexp"
      ],
      "settings": {
        "fontStyle": ""
      }
    }
  ]
}
