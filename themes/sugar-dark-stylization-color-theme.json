{
  "$schema": "vscode://schemas/color-theme",
  "include": "./sugar-dark-classic-color-theme.json",
  "tokenColors": [
    {
      "scope": [
        "punctuation",
        "meta.brace.curly",
        "meta.brace.round",
        "meta.brace.square",
        "storage.type.function.arrow",
        "keyword.operator.rest",
        "keyword.operator.spread",
        "keyword.operator.assignment",
        "keyword.operator.pattern",
        "keyword.operator.type.annotation",
        "keyword.operator.attribute-selector",
      ],
      "settings": {
        "foreground": "#3F3F3F"
      }
    },

    {
      "scope": [
        "storage.type",
        "keyword.control",
      ],
      "settings": {
        "fontStyle": "italic"
      }
    },

    {
			"scope": [
				"storage.type",
				"keyword.control",
				"keyword.operator.new",
				"keyword.operator.expression",
			],
			"settings": {
				"fontStyle": "italic"
			}
		},
  ]
}
