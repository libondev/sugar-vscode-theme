{
  "name": "Sugar Dark Stylization",
  "$schema": "vscode://schemas/color-theme",
  "include": "./dark-color-theme.json",
  "tokenColors": [
    {
      "scope": [
        "meta.brace",
        "punctuation",
        "keyword.operator",
        "meta.parameters",
        "meta.array.literal",
        "meta.embedded.block",
        "meta.function.expression",
        "meta.attribute.directive", // @click(.)stop
        "storage.type.function.arrow",
        "punctuation.separator.key-value",
        "punctuation.definition.typeparameters",
        "meta.property-list.media-query.scss",
        "invalid.illegal.character-not-allowed-here.html",
        "punctuation.section.function",
        // attr(()data-bid())
        "punctuation.definition.group.begin.less",
        "punctuation.definition.group.end.less",
        // less: @media (()     ())
        "punctuation.definition.group.begin.less",
        "punctuation.definition.group.end.less",
        "punctuation.definition.list.begin.markdown", // markdown list symbol
				"punctuation.definition.attribute-selector.begin.bracket.square.scss",
				"punctuation.definition.attribute-selector.end.bracket.square.scss",
      ],
      "settings": {
        "foreground": "#7777778F"
      }
    },

    {
      "scope": [
        "punctuation.accessor", // xxx(.)xxx
        "keyword.operator.logical",
        "keyword.operator.bitwise",
        "keyword.operator.increment",
        "keyword.operator.decrement",
        "keyword.operator.relational",
        "keyword.operator.comparison",
        "keyword.operator.arithmetic",
        "keyword.operator.assignment",

        "invalid.illegal.combinator.less",
      ],
      "settings": {
        "foreground": "#999"
      }
    },
  ]
}
