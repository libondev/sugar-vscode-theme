{
  "editor.formatOnSave": true,

  // Auto fix
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "always"
  },

  "cSpell.words": [
    "esno",
    "jetbrains",
    "readwrite",
    "tsup",
    "typeparameters"
  ],
  "commentTranslate.multiLineMerge": true
}
